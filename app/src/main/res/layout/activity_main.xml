<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/Foto_Profil"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/nova_flat"
        android:lineSpacingExtra="10dp"
        android:text="yourusername"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/nova_flat"
        android:text="Location, Place"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/option"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:background="@drawable/option"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="22dp"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="500dp"
        android:layout_height="450dp"
        android:background="@drawable/Main_Picture"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"/>

    <ImageButton
        android:id="@+id/like"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/Like"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="168dp"
        android:layout_marginLeft="10dp"
        />

    <ImageButton
        android:id="@+id/comment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/Comment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="168dp"
        android:layout_marginLeft="55dp"
        />

    <ImageButton
        android:id="@+id/share"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/Share"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="168dp"
        android:layout_marginLeft="100dp"
        />

    <ImageSwitcher
        android:id="@+id/swap"
        android:layout_width="30dp"
        android:layout_height="10dp"
        android:background="@drawable/Swipe_Picture"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="186dp"
        />

    <ImageButton
        android:id="@+id/save"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:background="@drawable/save"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="168dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 likes"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/like"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/postusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yourusername"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/like_count"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/postcomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#Percobaan #Testing #Tugas #Stress"
        android:textColor="#0645AD"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/postusername"
        android:layout_marginLeft="110dp"
        />

    <TextView
        android:id="@+id/postday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 days ago"
        android:textColor="#808080"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/like_count"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        />

    <ImageView
        android:id="@+id/profile_comment"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/Foto_Profil"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/add_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a comment"
        android:textColor="#D3D3D3"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@id/profile_comment"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>